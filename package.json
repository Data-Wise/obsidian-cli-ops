{
  "name": "obsidian-cli-ops",
  "version": "2.0.0-beta",
  "description": "An intelligent command-line tool for managing multi-vault Obsidian systems with knowledge graph analysis.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npm run test:js && npm run test:py",
    "test:js": "jest",
    "test:py": "pytest src/python/tests -v",
    "test:py:unit": "pytest src/python/tests -v -m unit",
    "test:py:integration": "pytest src/python/tests -v -m integration",
    "test:py:ai": "pytest src/python/tests -v -m ai",
    "test:shell": "bash tests/test_r_dev.sh",
    "test:all": "npm run test:js && npm run test:py && npm run test:shell",
    "test:coverage": "jest --coverage && pytest src/python/tests --cov=src/python --cov-report=term-missing",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.2.1",
    "jest": "^30.2.0",
    "prettier": "^3.7.4"
  }
}
